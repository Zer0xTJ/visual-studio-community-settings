set clipboard=unnamed,unnamedplus


" Enable camel case motion without highlighting
set ignorecase
set smartcase
set nohlsearch


let @a = '[a-z\ "\'$)(:;,.><\/\\)(`|&+-][A-Z][a-z]\|[\\ "\'$)(:;,.><\/\\)(`|&+-][a-z]\|[A-Za-z\ "\'$)(:;,.><\/\\)(`|&+-][0-9]\+'


nnoremap w :vsc Edit.NextSubword<CR>
vnoremap w :vsc Edit.NextSubwordExtend<CR>

nnoremap b :vsc Edit.PreviousSubword<CR>
vnoremap b :vsc Edit.PreviousSubwordExtend<CR>
